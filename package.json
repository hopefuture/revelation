{
  "name": "revelation",
  "version": "2.0.0",
  "author": "wangyanjun",
  "contributors": [
    "wangyanjun",
    "guyonghui"
  ],
  "description": "启示文化页面搭建",
  "keywords": [
    "启示",
    "文化"
  ],
  "main": "",
  "scripts": {
    "clean": "rimraf ./dist ./zip",
    "zip": "babel-node ./build/zip.js",
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./build/webpack.config.babel.js",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production webpack --progress --config ./build/webpack.config.babel.js && cross-env NODE_ENV=production rollup --config ./build/rollup.config.js",
    "postbuild": "sh ./build/to-dist.sh && npm run zip",
    "start:prod": "serve dist",
    "components": "cross-env NODE_ENV=development rollup --config ./build/rollup.config.js -w"
  },
  "dependencies": {
    "animate.css": "^3.7.2",
    "bootstrap": "^4.3.1",
    "detect-passive-events": "^1.0.4",
    "nunjucks": "^3.2.0",
    "qrcode": "^1.4.2",
    "swiper": "^4.5.1",
    "text-effect": "^1.0.1",
    "tween-functions": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "cpy-cli": "^2.0.0",
    "cross-env": "^6.0.0",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "eruda": "^1.6.2",
    "eslint": "^6.5.0",
