{
  "name": "revelation",
  "version": "1.0.0",
  "author": "wangyanjun",
  "contributors": [
    "wangyanjun",
    "guyonghui"
  ],
  "description": "启示文化页面搭建",
  "keywords": [
    "启示",
    "文化"
  ],
  "main": "",
  "scripts": {
    "clean": "rimraf ./dist",
    "build:scss": "node-sass ./client/scss -o ./client/css -w -r",
    "build:dev": "NODE_ENV=development rollup -c ./build/rollup.config.js -w",
    "start": "serve client && run-p build:**",
    "prebuild": "npm run clean",
    "build": "node-sass ./client/scss -o ./client/css && postcss client/css/*.css -r && NODE_ENV=production rollup -c ./build/rollup.config.js",
    "postbuild": "cpy ./ ../dist --cwd=client --parents && rimraf ./dist/scss ./dist/scripts/src"
  },
  "dependencies": {
    "animate.css": "^3.7.2",
    "bootstrap": "^4.3.1",
    "swiper": "^4.5.0",
    "text-effect": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "autoprefixer": "^9.6.1",
    "cpy-cli": "^2.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "serve": "^11.1.0",
    "stylelint": "^10.1.0",
    "stylelint-config-ultimate": "^0.2.2",
    "stylelint-scss": "^3.10.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hopefuture/revelation.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hopefuture/revelation/issues"
  },
  "homepage": "https://github.com/hopefuture/revelation#readme"
}
